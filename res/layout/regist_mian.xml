<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <fragment
            android:id="@+id/fragment_one"
            android:name="com.example.singleTextInputFragment.SingleTextViewInputFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            tools:layout="@layout/singleinput_fragment" />

        <fragment
            android:id="@+id/fragment_two"
            android:name="com.example.singleTextInputFragment.SingleTextViewInputFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            tools:layout="@layout/singleinput_fragment" />

        <fragment
            android:id="@+id/fragment_three"
            android:name="com.example.singleTextInputFragment.SingleTextViewInputFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fragment"
            android:layout_centerHorizontal="true"
            tools:layout="@layout/singleinput_fragment" />

        <fragment
            android:id="@+id/fragment_five"
            android:name="com.example.singleTextInputFragment.SingleTextViewInputFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            tools:layout="@layout/singleinput_fragment" />

        <fragment
            android:id="@+id/fragment_four"
            android:name="com.example.singleTextInputFragment.SingleImageInputFragment"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fragment_three"
            android:layout_centerHorizontal="true"
            tools:layout="@layout/fragment_image_main" />

        <Button
            android:id="@+id/commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:padding="3dp"
            android:layout_gravity="center_horizontal"
            android:text="Commit"/>
    </LinearLayout>

</LinearLayout>